{% extends "@HVForum/layout.html.twig" %}

{% block hvforum_body %}
  <div id="formAddPost">
    <h2>Modifier le post</h2><hr />
    <div class="forum_tools" style="float:right">
      <a href="{{ path('hv_forum_topic', {'url' : urlSection, 'id' : id }) }}"><button class="btn btn-dark">Retour au forum</button></a>
    </div>
    <br /><br />
    <form method="post">
      <div class="form-group">
        <label for="postContent">Contenu du message :</label>
        <textarea class="form-control tinymce" name="postContent" rows="10">{{ post.content }}</textarea>
      </div>
      <button type="submit" class="btn btn-dark">Modifier</button>
    </form>
  </div>
{% endblock %}
