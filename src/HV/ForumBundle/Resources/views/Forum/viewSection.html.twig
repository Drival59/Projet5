{% extends "@HVForum/layout.html.twig" %}

{% block hvforum_body %}
<div id="forumTable">
  <h2>{{ nameSection }}</h2><hr />
  <div class="forum_tools">
    <p>Pagination</p>
    <p><a href="{{ path('hv_forum_homepage') }}">Retour au forum</a></p>
  </div>
  <table class="table table-bordered">
    <thead class="thead-dark">
      <tr>
        <th class="col-lg-1"></th>
        <th class="col-lg-5">Sujet</th>
        <th class="col-lg-4">Dernier message</th>
        <th class="col-lg-1" style="text-align:center"><i class="fas fa-comments"></i></th>
        <th class="col-lg-1" style="text-align:center"><i class="fas fa-eye"></i></th>
      </tr>
    </thead>

    <tbody>
      {% for topic in listTopic %}
        <td style="text-align:center"><img src="{{ asset('images/forum/metal-icon-nomessage.png')}}" alt="" width="25px"/></td>
        <td><h5><a href="{{ path('hv_forum_topic', {'url' : urlSection, 'id' : topic.id })}}">{{ topic.subject }}</a></h5></td>
        {% set countPost = 0 %}
        {% set countPost = 0 %}
        {% set lastPost = "Aucun message dans ce topic" %}
        {% for post in listPost %}
          {% if post.forumTopic.id == topic.id %}
          {% set lastPost = "Écrit par " ~ topic.users.login ~ " le " ~ post.datePost|date('d/m/Y à H:i') ~ "" %}
          {% set countPost = countPost + 1 %}
          {% endif %}
        {% endfor %}
        <td>{{ lastPost }}</td>
        <td style="text-align:center">{{ countPost }}</td>
        <td style="text-align:center">{{ topic.view }}</td>
      {% endfor %}
    </tbody>
  </table>
</div>
{% endblock %}
