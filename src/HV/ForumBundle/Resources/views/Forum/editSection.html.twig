{% extends "@HVForum/layout.html.twig" %}

{% block hvforum_body %}
  <div class="container">
    <h2>Édition d'une section</h2>
    <form class="formHV" method="post">
      <div class="form-group">
        <label>Titre de la section :</label>
        <input type="text" class="form-control" name="titleSection" value="{{section.name}}" required>
      </div>
      <button type="submit" class="btn btn-dark">Éditer</button>
    </form>
  </div>
{% endblock %}
