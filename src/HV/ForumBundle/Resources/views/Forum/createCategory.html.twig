{% extends "@HVForum/layout.html.twig" %}

{% block hvforum_body %}
  <div class="container">
    <h2>Creation d'une catégorie</h2>
    <form class="formHV" method="post">
      <div class="form-group">
        <label>Titre de la catégorie :</label>
        <input type="text" class="form-control" name="titleCategory" required>
      </div>
      <div class="form-group">
        <label>Titre de la première section :</label>
        <input type="text" class="form-control" name="titleSection" required>
      </div>
      <button type="submit" class="btn btn-dark">Créer</button>
    </form>
  </div>
{% endblock %}
