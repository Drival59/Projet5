{% extends "@HVNews/layout.html.twig" %}

{% block hvnews_body %}
  <div id="containerCurrentEvent">
    <div id="imageCurrentEvent">
      <img src="{{ asset('images/' ~ news.imageUrl) }}" alt="lol" width="100%" height="600px"/>
    </div>
    <div id="newContentCurrentEvent">
      <h3>{{ news.title }}</h3>
      <i>Ecrit par {{ news.author }} le {{ news.dateNews|date('d/m/Y à H:m') }}</i>
      <br /><br />
      <p>{{ news.content|raw }}</p>
    </div>
    <div id="commentsCurrentEvent">
      <h3>Commentaires ({{ comments|length }})</h3>
      {% for comment in comments %}
        <div class="commentCurrentEvent">
          <div class="avatarComment">
            <img src="{{ asset('images/avatar-country-album.jpg') }}" alt="avatar" width="100%"/>
          </div>
          <div class="commentContent">
            <i>{{ comment.users.pseudo }} à ecrit ce commentaire le {{ comment.dateComment|date('d/m/Y à H:i') }} :</i>
            <p>{{ comment.content }}</p>
          </div>
        </div>
      {% endfor %}
    </div>

  </div>
{% endblock %}
