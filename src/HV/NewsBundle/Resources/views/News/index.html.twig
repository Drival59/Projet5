{% extends "@HVNews/layout.html.twig" %}

{% block hvnews_body %}
  <div id="containerMain">

    <div id="carouselNews" class="carousel slide" data-ride="carousel">
      <!-- Indicators -->
      <ol class="carousel-indicators">
        {% for newInCarousel in newsInCarousel %}
          {% if loop.index == 1 %}
            <li data-target="#carouselNews" data-slide-to="0" class="active"></li>
          {% else %}
            <li data-target="#carouselNews" data-slide-to="{{ loop.index-1 }}"></li>
          {% endif %}
        {% endfor %}
      </ol>

      <!-- Wrapper for slides -->
      <div class="carousel-inner">
        {% for newInCarousel in newsInCarousel %}
          {% if loop.index == 1 %}
            <div class="carousel-item active">
          {% else %}
            <div class="carousel-item">
          {% endif %}
            <img src="{{ asset('images/' ~ newInCarousel.imageUrl) }}" alt="Images du carousel" class="d-block w-100" style="height:400px">
              <div class="carousel-caption d-none d-md-block">
                <h3><a href="{{ path('hv_news_currentevents', {'id': newInCarousel.id}) }}">{{ newInCarousel.title }}</a></h3>
              </div>
            </div>
        {% endfor %}
      </div>

      <!-- Left and right controls -->
      <a class="carousel-control-prev" href="#carouselNews" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselNews" role="button" data-slide="next">
        <span class="carousel-control-next-icon"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>

    <div id="widgets">
      <div id="search">
        <h3>Rechercher dans l'actu<h3>
        <div id="searchNewsInput" class="form-group">
          <input type="text" class="form-control" id="usr">
          <button class="btn btn-light"><i class="fa fa-search" aria-hidden="true"></i></button>
        </div>
      </div>
      <div id="popularNews">
        <h3>Les actualités populaires</h3>
        <p>Avatar a sorti son dernier album</p>
        <p>Avatar a sorti son dernier album</p>
        <p>Avatar a sorti son dernier album</p>
        <p>Avatar a sorti son dernier album</p>
      </div>
    </div>
  </div>

  <div id="containerNews">
    <h2>L'actualité</h2>
    {% for news in listNews %}
      <div class="news">
        <a href="{{ path('hv_news_currentevents', {'id': news.id}) }}">
          <p class="titleNews">{{ news.title }}</p>
          <i>Ecrit par {{ news.author }} le {{ news.dateNews|date('d/m/Y') }}<i>
        </a>
      </div>
    {% endfor %}
  </div>
{% endblock %}
