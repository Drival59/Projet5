{% extends "@HVNews/layout.html.twig" %}

{% block hvnews_body %}
  <div id="containerMain">

    <div id="carouselNews" class="carousel slide" data-ride="carousel">
      <!-- Indicators -->
      <ol class="carousel-indicators">
        {% for newInCarousel in newsInCarousel %}
          {% if loop.index == 1 %}
            <li data-target="#carouselNews" data-slide-to="0" class="active"></li>
          {% else %}
            <li data-target="#carouselNews" data-slide-to="{{ loop.index-1 }}"></li>
          {% endif %}
        {% endfor %}
      </ol>

      <!-- Wrapper for slides -->
      <div class="carousel-inner">
        {% for newInCarousel in newsInCarousel %}
          {% if loop.index == 1 %}
            <div class="item active">
          {% else %}
            <div class="item">
          {% endif %}
            <img src="{{ asset('images/' ~ newInCarousel.imageUrl) }}" alt="Images du carousel" width="100%" style="height:400px">
              <div class="carousel-caption">
                <h3>{{ newInCarousel.title }}</h3>
              </div>
            </div>
        {% endfor %}
      </div>

      <!-- Left and right controls -->
      <a class="left carousel-control" href="#carouselNews" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#carouselNews" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>

    <div id="searchNews">
      <h3>Rechercher dans l'actu<h3>
      <div id="searchNewsInput" class="form-group">
        <input type="text" class="form-control" id="usr">
        <button class="btn"><i class="fa fa-search" aria-hidden="true"></i></button>
      </div>
    </div>
  </div>

  <div id="containerNews">
    <h2>L'actualit√©</h2>
    {% for news in listNews %}
      <div class="news">
        <a href="{{ path('hv_news_currentevents', {'id': news.id}) }}">
          <p class="titleNews">{{ news.title }}</p>
          <i>Ecrit par {{ news.author }} le {{ news.dateNews|date('d/m/Y') }}<i>
        </a>
      </div>
    {% endfor %}
  </div>
{% endblock %}
